<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/pocket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/emergency_loan"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Pocket Name / Jina la Mfuko"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="#fff" />

        <EditText
            android:id="@+id/pocket_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/money_zungusha"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Amount Goal / Kiasi cha lengo"
            android:inputType="number"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="#fff" />

        <EditText
            android:id="@+id/maturityDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Maturity Date / Siku ya Kuchukua"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="#fff" />

        <Button
            android:id="@+id/addPocket"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_login"
            android:clickable="true"
            android:padding="10dp"
            android:text="Add Pocket / Tengeneza Mfuko"
            android:textAllCaps="false"
            android:textColor="@color/pinkAccent"
            android:onClick="addPocket"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" My Pockets / Mifuko yangu"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/saving_pockets"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="#fff" />
        <ListView
            android:id="@+id/pockets"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_login"
        android:layout_margin="10dp"
        android:clickable="true"
        android:textColor="@color/pinkAccent"
        android:text="Back"
        android:onClick="loginAction"/>

</RelativeLayout>