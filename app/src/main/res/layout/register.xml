<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:background="@drawable/background_gradient_reg"
    android:windowNoTitle="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo_white"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="BOX PESA"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#fff"/>

            <EditText
                android:id="@+id/rUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="#fff"
                android:hint="Username / Jina la usajili"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="#fff" />
            <TextView
                android:id="@+id/usernameValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/materialGreen"
                android:textColor="#fff"/>

            <EditText
                android:id="@+id/rPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="#fff"
                android:hint="Phone No. / Namba ya simu"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_phone_iphone_white_24dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="#fff" />
            <TextView
                android:id="@+id/phoneValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/materialGreen"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/rPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="#fff"
                android:hint="Password / Neno la siri."
                android:textColorHint="#fff"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_lock_white_24dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="#fff" />
            <EditText
                android:id="@+id/rPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="#fff"
                android:hint="Confirm Password / Hakiki"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_lock_outline_white_24dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="#fff" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login"
                android:layout_marginTop="15dp"
                android:text="Register / Jisajili"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textSize="18sp"
                android:clickable="true"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/materialYello" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_pink"
                android:layout_marginTop="10dp"
                android:text="Already Register (Ingia)"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textSize="18sp"
                android:clickable="true"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff"
                android:onClick="login"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>