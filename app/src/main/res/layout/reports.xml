<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo_white"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="BOX PESA"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/direct_saving_report"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Direct Saving Report"
            android:background="@drawable/background_login"
            android:textColor="@color/pinkAccent"
            android:onClick="directSavingReport"/>

        <Button
            android:id="@+id/saving_pockets_report"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Saving Pockets Report"
            android:background="@drawable/background_login"
            android:textColor="@color/pinkAccent"
            android:onClick="savingPocketsReport"/>

        <Button
            android:id="@+id/money_zungusha_report"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Money Zungusha Report"
            android:background="@drawable/background_login"
            android:textColor="@color/pinkAccent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_login"
            android:clickable="true"
            android:text="BACK"
            android:textColor="@color/pinkAccent"
            android:paddingLeft="10dp"
            android:onClick="loginAction"/>


    </LinearLayout>

</RelativeLayout>